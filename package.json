{
	"name": "conan",
	"displayName": "Conan",
	"description": "Conan extension for Visual Studio Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:conan.newPackage",
		"workspaceContains:**/conanfile.py"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Conan",
			"properties": {
				"conan.executable": {
					"description": "Path to the Conan client executable to use",
					"type": "string",
					"scope": "window",
					"default": "conan"
				},
				"conan.userHome": {
					"description": "Path to the Conan home (configuration and settings)",
					"type": "string",
					"scope": "window",
					"default": "${workspaceFolder}/.conan"
				},
				"conan.storagePath": {
					"description": "Path to the Conan cache (to store packages)",
					"type": "string",
					"scope": "window",
					"default": "~/.conan/data"
				}
			}
		},
		"commands": [
			{
				"command": "conan.newPackage",
				"title": "New package",
                "category": "Conan"
			},
            {
                "command": "conan.install",
                "title": "Install requires",
                "category": "Conan"
            }
		],
        "menus": {
            "commandPalette": [
                {
                    "command": "conan.install",
                    "when": "inConanPackage"
                }
            ]
        }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}
